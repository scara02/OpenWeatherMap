<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
    <link rel="stylesheet" href="/styles.css">

    <link href='https://unpkg.com/css.gg@2.0.0/icons/css/log-out.css' rel='stylesheet'>
</head>

<body class="d-flex flex-column">
    <%- include('navbar') %>

        <main>
            <div class="container my-4">
                <div class="container text-center" style="color: white;">
                    <h3>News</h3>
                </div>

                <div class="row my-4">
                    <div class="col-lg-6 col-12 mx-auto">
                        <form id="form">
                            <div class="input-group">
                                <input type="search" id="city" class="form-control" placeholder="keyword goes here..."
                                    required>
                                <button type="submit" id="search" class="form-control">Search</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>


            <div class="container text-white">
                <ol>
                    <div class="row">
                        <% if (newsData) { %>
                            <% newsData.articles.forEach((data)=> { %>
                                <li class="my-2" style="padding-right: 30px;">
                                    <div class="list-entry" style="border: 1px solid; padding: 10px;">
                                        <p>Title: <%= data.title %></p>
                                        <p>Description: <%= data.description %></p>
                                        <p>Author: <%= data.author %></p>
                                        <p>Link: <a href="<%= data.url %>"
                                             target="_blank" style="color: white;">click here</a></p>
                                        <p>Published: <%= data.publishedAt %></p>
                                    </div>
                                </li>
                                <% }); %>
                                    <% } else { %>
                                        <div class="col-12 text-center">
                                            <p>No news data available.</p>
                                        </div>
                                        <% } %>
                    </div>
                </ol>
            </div>
        </main>

        <%- include('footer') %>
            <script src="/news.js"></script>
</body>

</html>